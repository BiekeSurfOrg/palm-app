<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Palmapp.CardView.Filled" parent="Widget.MaterialComponents.CardView">
        <!-- White card background -->
        <item name="cardBackgroundColor">@color/colorCard</item>
        <!-- Rounded corners -->
        <item name="cardCornerRadius">20dp</item>
        <!-- Soft shadow/elevation -->
        <item name="cardElevation">8dp</item>
        <!-- Remove card stroke by default -->
        <item name="strokeWidth">0dp</item>
        <!-- Ensure content inside respects padding -->
        <item name="contentPadding">16dp</item>
        <!-- Prevent corner overlap issues -->
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="Theme.Palmapp.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary app colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Remove action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- CardView style -->
        <item name="cardViewStyle">@style/Widget.Palmapp.CardView.Filled</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.Palmapp.Button.Primary</item>

        <!-- List style -->
        <item name="android:listViewStyle">@style/Widget.Palmapp.ListView</item>

        <!-- Text field style -->
        <item name="textInputStyle">@style/Widget.Palmapp.TextInputLayout</item>
    </style>
    <!-- Main App Theme -->
<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand colors -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand colors -->
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
    <item name="colorOnSecondary">@color/white</item>

    <!-- Backgrounds -->
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="android:navigationBarColor">@color/colorPrimary</item>
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    <!-- Typography -->
    <item name="textAppearanceHeadline6">@style/TextAppearance.Palmapp.Title</item>
    <item name="textAppearanceBody1">@style/TextAppearance.Palmapp.Body</item>
    <item name="textAppearanceButton">@style/TextAppearance.Palmapp.Button</item>

    <!-- Component Styles -->
    <item name="cardViewStyle">@style/Widget.Palmapp.CardView.Filled</item>
    <item name="materialButtonStyle">@style/Widget.Palmapp.Button.Primary</item>
    <item name="textInputStyle">@style/Widget.Palmapp.TextInputLayout</item>
    <item name="android:listViewStyle">@style/Widget.Palmapp.ListView</item>
</style>

<!-- AppBar overlay theme -->
<style name="Theme.Palmapp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
    <!-- Match your app bar colors -->
    <item name="colorPrimary">@color/md_theme_light_primary</item>
    <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
    <item name="android:textColorPrimary">@color/md_theme_light_onPrimary</item>
    <item name="android:statusBarColor">@color/md_theme_light_primary</item>
</style>

<!-- Popup overlay theme -->
<style name="Theme.Palmapp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
    <item name="android:textColorPrimary">@color/md_theme_light_onSurface</item>
    <item name="android:colorBackground">@color/md_theme_light_surface</item>
    <item name="colorSurface">@color/md_theme_light_surface</item>
    <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
</style>

<!-- Primary Button Style -->
<style name="Widget.Palmapp.Button.Primary" parent="Widget.MaterialComponents.Button">
    <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/colorPrimary</item>
    <item name="cornerRadius">50dp</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:paddingEnd">20dp</item>
    <item name="android:minHeight">56dp</item>
</style>

<!-- ListView Style -->
<style name="Widget.Palmapp.ListView" parent="Widget.AppCompat.ListView">
    <item name="android:divider">@color/colorDivider</item>
    <item name="android:dividerHeight">1dp</item>
    <item name="android:listSelector">?attr/selectableItemBackground</item>
</style>

<!-- TextInputLayout Style -->
<style name="Widget.Palmapp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxBackgroundColor">@color/colorCard</item>
    <item name="boxStrokeColor">@color/colorPrimary</item>
    <item name="boxCornerRadiusTopStart">12dp</item>
    <item name="boxCornerRadiusTopEnd">12dp</item>
    <item name="boxCornerRadiusBottomStart">12dp</item>
    <item name="boxCornerRadiusBottomEnd">12dp</item>
</style>

<!-- Typography -->
<style name="TextAppearance.Palmapp.Title" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:textColor">@color/colorPrimaryText</item>
</style>

<style name="TextAppearance.Palmapp.Body" parent="TextAppearance.MaterialComponents.Body1">
    <item name="android:textColor">@color/colorSecondaryText</item>
</style>

<style name="TextAppearance.Palmapp.Button" parent="TextAppearance.MaterialComponents.Button">
    <item name="android:textAllCaps">false</item>
</style>

</resources>