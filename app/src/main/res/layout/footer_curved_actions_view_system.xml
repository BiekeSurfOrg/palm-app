<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_curved"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bg_footer_curved"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical">

    <!-- Left arrow button -->
    <ImageButton
        android:id="@+id/btn_prev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_left_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/prev"
        android:layout_alignParentStart="true"
        android:tint="@color/md_theme_light_onSurface" />

    <!-- Right arrow button -->
    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_right_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/next"
        android:layout_alignParentEnd="true"
        android:tint="@color/md_theme_light_onSurface" />

    <!-- Optional center label -->
    <TextView
        android:id="@+id/footer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/footer_label"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_centerInParent="true"
        android:textColor="@color/md_theme_light_onSurface" />

</RelativeLayout>
